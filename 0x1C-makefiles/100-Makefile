CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

ifeq ($(wildcard m.h),) 
$(error Header file m.h is missing) 
endif

all: $(NAME)
$(NAME): $(OBJ)
	$(CC)  $(CFLAGS)  -o $@ $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

PHONY: all clean oclean fclean re
